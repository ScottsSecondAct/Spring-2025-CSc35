{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "assemble",
      "type": "shell",
      "command": "as",
      "args": [
        "--64",
        "-g",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "link",
      "type": "shell",
      "command": "ld",
      "args": [
        "${fileDirname}/${fileBasenameNoExtension}.o",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "dependsOn": "assemble",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "objcopy",
      "type": "shell",
      "command": "objcopy",
      "args": [
        "-O",
        "binary",
        "${fileDirname}/${fileBasenameNoExtension}.elf",
        "${fileDirname}/${fileBasenameNoExtension}.binary"
      ],
      "dependsOn": "link",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}